<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/house_api_browser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/companies_house"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:onClick="onCompaniesHouseButtonPressed"/>

    <Button
        android:id="@+id/warframe_sentient_detector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sentient_detector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/house_api_browser"
        android:layout_marginTop="8dp"
        android:onClick="onSentientButtonPressed"/>
</android.support.constraint.ConstraintLayout>